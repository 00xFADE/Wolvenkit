<catel:DataWindow x:Class="WolvenKit.Views.CodeEditor.CodeEditorView"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:catel="http://schemas.catelproject.com" xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:hc="https://handyorg.github.io/handycontrol"
                  ShowInTaskbar="True" 
                  AllowsTransparency="True" 
                  ResizeMode="CanResizeWithGrip" 
                  BorderBrush="{x:Null}" 
                  WindowStartupLocation="CenterScreen"  
                  MinHeight="600" 
                  MinWidth="400"
                  WindowStyle="None" 
                  Title="Code Editor" >
    <catel:DataWindow.Resources>
        <ResourceDictionary>


            <ResourceDictionary.MergedDictionaries>

                <hc:Theme Name="HandyTheme"/>
                <hc:Theme Skin="Dark"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </catel:DataWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>

            <RowDefinition Height="auto"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="DraggableTitleBar" Grid.ColumnSpan="2" Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}">
            <!--TitleBar  Please add onmousedown event to be able to drag the window-->
            <Button Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}" BorderBrush="{x:Null}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3,3,5,3" >
                <iconPacks:PackIconCodicons   Kind="Close"/>
            </Button>
            <Button BorderBrush="{x:Null}" Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3,3,45,3" >
                <iconPacks:PackIconCodicons  Kind="ChromeMinimize"/>
            </Button>
            <TextBlock Text="Code Editor" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </Grid>


        <hc:TabControl Style="{StaticResource TabControlInLine}" TabStripPlacement="Bottom" Grid.Row="2">
            <hc:TabItem Header="Edit">
                <avalonEdit:TextEditor
            Margin="3"
            Grid.Row="2"
                    Name="avEditor"
                    Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}"
                            SyntaxHighlighting="C#"

                    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                    LineNumbersForeground="Black">

                </avalonEdit:TextEditor>
            </hc:TabItem>
            <hc:TabItem Header="Compare">
                
            </hc:TabItem>
        </hc:TabControl>


        <ToolBarTray Orientation="Vertical" Grid.Row="2" Grid.Column="1">
            <ToolBar Style="{StaticResource ToolBarBaseStyle}" Padding="6" Header="{}">
                <CheckBox IsChecked="True" Margin="0,10,0,0"/>
                <Separator Margin="0,10,0,0"/>
                <RadioButton Margin="0,10,0,0"/>
                <StackPanel>
                    <RadioButton IsChecked="True" Margin="0,10,0,0"/>
                    <RadioButton Margin="0,10,0,0"/>
                </StackPanel>
                <Button Content="" Margin="0,10,0,0"/>
                <Button Content="" Margin="0,10,0,0" Style="{StaticResource ButtonPrimary}"/>
            </ToolBar>
            <ToolBar Style="{StaticResource ToolBarBaseStyle}" Band="1" Padding="6" Header="{}">
                <CheckBox IsChecked="True" Margin="0,10,0,0"/>
                <Separator Margin="0,10,0,0"/>
                <RadioButton Margin="0,10,0,0"/>
                <StackPanel>
                    <RadioButton IsChecked="True" Margin="0,10,0,0"/>
                    <RadioButton Margin="0,10,0,0"/>
                </StackPanel>
                <Button Content="" Margin="0,10,0,0"/>
                <Button Content="" Margin="0,10,0,0" Style="{StaticResource ButtonPrimary}"/>
            </ToolBar>

        </ToolBarTray>
       


   
    </Grid>
    
</catel:DataWindow>
